{
    "compilerOptions": {
        "target": "es6",
        "allowJs": true,
        "noEmit": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "module": "es6",
        "moduleResolution": "node",
        "jsx": "react",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "components/*": ["src/components/*"],
            "projectTypes/*": ["src/projectTypes/*"],
            "styles/*": ["src/styles/*"],
            "utils/*": ["src/utils/*"],
            "pages/*": ["src/App/pages/*"],
            "App/*": ["src/App/*"],
            "store/*": ["src/store/*"]
        }
    },
    "include": [
        "src/**/*",
        "./typings.d.ts"
    ],
    "exclude": ["node_modules"]
}